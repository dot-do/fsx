{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "types": ["@cloudflare/workers-types", "@types/pako"],
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "index.ts",
    "core/**/*",
    "storage/**/*",
    "vfs/**/*",
    "do/**/*",
    "cli/**/*",
    "internal/**/*",
    "client/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "examples/**"]
}
